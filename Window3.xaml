            <ListBoxItem x:Name="plus" Content="+" FontSize="18" FontWeight="Bold"/>
            <ListBoxItem x:Name="minus" Content="-" FontWeight="Bold" FontSize="18"/>
            <ListBoxItem x:Name="puta" Content="*" FontSize="18" FontWeight="Bold"/>
            <ListBoxItem x:Name="pod" Content="/" FontSize="18" FontWeight="Bold"/>
        </ListBox>
        <TextBox x:Name="op1" HorizontalAlignment="Left" Height="45" Margin="179.8,135.35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="45" Background="#FF24F1C9" FontWeight="Bold" FontSize="24" TextAlignment="Center" Text="{Binding SelectedItem.Content, ElementName=operacija}"/>
        <TextBox x:Name="op4" HorizontalAlignment="Left" Height="45" Margin="179.8,343.4,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="45" Text="{Binding SelectedItem.Content, ElementName=operacija}" Background="#FF24F1C9" FontWeight="Bold" FontSize="24" TextAlignment="Center"/>
